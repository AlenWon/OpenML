<tasktemplate> <!-- dictionary for all possible features -->
    <type>Classification</type>
    <description>Evaluate a classification algorithm or workflow on a given dataset</description>
    <evaluation> <!-- what are we optimizing for? -->
        <evaluation_method>
            <cross_validation nr_folds="10" nr_repeats="10"/> <!-- also holdout, subsampling, bootstrapping -->
        </evaluation_method>
        <evaluation_measure>PredictiveAccuracy</evaluation_measure> <!-- precision, recall, truepositiverate, falsepositiverate -->
        <evaluation_measure>ErrorRate</evaluation_measure>
        <!-- todo: <constraint measure="recall" min="0.5" />  -->
        <!-- todo: <cost_matrix>...</cost_matrix>  -->
    </evaluation>
    <dataset>
        <id>datasetid</id>
        <targetfeature>class</targetfeature>
    </dataset>
</tasktemplate>
